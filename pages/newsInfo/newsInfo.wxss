/* pages/newsInfo/newsInfo.wxss */
@import "/wxParse/wxParse.wxss";

.newsInfo-title {
  font-size: 24px;
  font-weight: bold;
  margin: 30rpx;
}

.newsInfo-source-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.newsInfo-source {
  font-size: 12px;
  color: gray;
}

.newsInfo-date {
  font-size: 12px;
  color: gray;
}

.newsInfo-content {
  font-size: 20px;
  line-height: 70rpx;
  margin: 30rpx;
  margin-top: -50rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

.newsInfo-separator {
  background-color: #d5dbe1;
  height: 1rpx;
  margin: 30rpx;
}
